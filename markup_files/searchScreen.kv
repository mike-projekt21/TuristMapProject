<SearchScreen>:
    name: 'search'
    id: search_screen
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            padding: 10
            rows: 2
            cols: 2
            spacing: 10
            size_hint: 1,.3
            TextInput:
                id: search_input
                hint_text: 'Введите адрес или название'
            Button:
                text: 'поиск'
                on_press: root.search_by_input(root.ids.search_input.text)
            BoxLayout:
                spacing: 10
                TextInput:
                    id: start_input
                    hint_text: 'начало'
                TextInput:
                    id: finish_input
                    hint_text: 'конец'
            Button:
                text: 'Проложить маршрут'
                on_press: root.draw_lines(root.ids.start_input.text, root.ids.finish_input.text)
        BoxLayout:
            padding: 10
            orientation: 'vertical'
            size_hint: 1,.3
            Label:
                text: "Группы достопримечательностей"
                color: "black"
                size_hint: 1,.2
            ScrollView:
                size_hint: 1,.8
                do_scroll: True, False
                GridLayout:
                    rows: 1
                    cols: 5
                    spacing: 10
                    size_hint: None,None
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_group(('theater',))
                        Image:
                            source: 'resources/big_theater.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Театры"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_group(('monument',))
                        Image:
                            source: 'resources/pushkin.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Памятники"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_group(('church',))
                        Image:
                            source: 'resources/hram_vozneseniya_gospodnya.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Храмы"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_group(('museum',))
                        Image:
                            source: 'resources/dom_muzei_marini_cvetaevoi.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Музеи"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_group(('park',))
                        Image:
                            source: 'resources/zaryadye.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Парки"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
        BoxLayout:
            padding: 10
            orientation: 'vertical'
            size_hint: 1,.3
            Label:
                text: "Недалеко"
                color: "black"
                size_hint: 1,.2
            ScrollView:
                size_hint: 1,.8
                do_scroll: True, False
                GridLayout:
                    rows: 1
                    spacing: 10
                    size_hint: None,None
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_input('Памятник А.С. Пушкину')
                        Image:
                            source: 'resources/pushkin.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Памятник \nА.С. Пушкину"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_input('Школа №1520 имени Капцовых')
                        Image:
                            source: 'resources/school1520.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Школа №1520 \nимени Капцовых"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_input('МХАТ имени Горького')
                        Image:
                            source: 'resources/mhat.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "МХАТ имени Горького"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        on_press: root.search_by_input('Парк Зарядье')
                        Image:
                            source: 'resources/zaryadye.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Зарядье"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
        MDBottomAppBar:
            MDTopAppBar:
                icon: "compass-outline"
                type: "bottom"
                mode: "center"
                on_action_button: app.change_screen("home","left")
                left_action_items: [["magnify", lambda x: app.change_screen('search',"right")]]
                right_action_items:[["account", lambda x: app.change_screen("profile","left")]]

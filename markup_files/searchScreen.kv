<SearchScreen>:
    name: 'search'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: 2
            cols: 2
            spacing: 10
            size_hint: 1,.3
            TextInput:
                hint_text: 'search'
            Button:
                text: 'search'
            BoxLayout:
                spacing: 10
                TextInput:
                    hint_text: 'start'
                TextInput:
                    hint_text: 'finish'
            Button:
                text: 'Make road'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,.3
            Label:
                text: "Группы достопримечательностей"
                color: "black"
                size_hint: 1,.2
            ScrollView:
                size_hint: 1,.8
                do_scroll: True, False
                GridLayout:
                    rows: 1
                    cols: 5
                    spacing: 10
                    size_hint: None,None
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/big_theater.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Театры"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/pushkin.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Памятники"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/hram_vozneseniya_gospodnya.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Храмы"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/dom_muzei_marini_cvetaevoi.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Музеи"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/zaryadye.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Парки"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,.3
            Label:
                text: "Недалеко"
                color: "black"
                size_hint: 1,.2
            ScrollView:
                size_hint: 1,.8
                do_scroll: True, False
                GridLayout:
                    rows: 1
                    padding: 10
                    spacing: 10
                    size_hint: None,None
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/pushkin.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Памятник \nА.С. Пушкину"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/school1520.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Школа №1520 \nимени Капцовых"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/mhat.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "МХАТ имени Горького"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
                    Button:
                        size: 150, 150
                        size_hint: None, None
                        background_color: (0.0, 0.0, 0.0, 0.0)
                        Image:
                            source: 'resources/zaryadye.jpg'
                            size: 150, 150
                            size_hint: None, None
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y+20
                        Label:
                            text: "Зарядье"
                            color: 'black'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y-50
        MDBottomAppBar:
            MDTopAppBar:
                icon: "compass-outline"
                type: "bottom"
                mode: "center"
                on_action_button: app.change_screen("home","left")
                left_action_items: [["magnify", lambda x: app.change_screen('search',"right")]]
                right_action_items:[["account", lambda x: app.change_screen("profile","left")]]

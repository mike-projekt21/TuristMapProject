#:include markup_files/homeMapView.kv
<HomeScreen>:
    name: 'home'
    id: home_screen
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Посмотреть всё"
            right_action_items: [["eye", lambda x: app.root.ids.home_screen.ids.map_view.get_markers()]]
        HomeMapView:
            id:map_view
        MDBottomAppBar:
            MDTopAppBar:
                icon: "compass-outline"
                type: "bottom"
                mode: "center"
                on_action_button: app.change_screen("home","right")
                left_action_items: [["magnify", lambda x: app.change_screen('search',"right")]]
                right_action_items:[["account", lambda x: app.change_screen("profile","left")]]

<ProfileScreen>:
    name: 'profile'
    id: profile_screen
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: "resources/test_photo.jpg"
        Label:
            text: "Иванов Андрей"
            color: "black"
            pos_hint_x: .5
        Button:
            text: "Посещенно"
        Button:
            text: "Недавнее"
        Button:
            text: "Любимое"
        Button:
            text: "Выход"
        MDBottomAppBar:
            MDTopAppBar:
                icon: "compass-outline"
                type: "bottom"
                mode: "center"
                on_action_button: app.change_screen("home","right")
                left_action_items: [["magnify", lambda x: app.change_screen('search',"right")]]
                right_action_items:[["account", lambda x: app.change_screen("profile","left")]]